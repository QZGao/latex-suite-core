{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "declaration": true,
    "emitDeclarationOnly": true,
    "outDir": "dist",
    "rootDir": "src",
    "skipLibCheck": true,
    "noEmit": false
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "src/main.ts",
    "src/features/editor_commands.ts",
    "src/settings/file_watch.ts",
    "src/settings/settings_tab.ts",
    "src/settings/ui/**",
    "src/editor_extensions/math_tooltip.ts",
    "src/editor_extensions/conceal.ts"
  ]
}
